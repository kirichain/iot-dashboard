doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title IoT Dashboard
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD', crossorigin='anonymous')
    link(href='https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
  body
    .container-fluid
      nav.navbar.navbar-expand-lg.bg-light
        .container-fluid.d-flex.justify-content-start
          a.navbar-brand(href='#') IoT Dashboard
          button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-lg-0
              li.nav-item
                a.nav-link.active(aria-current='page', href='/') Statistics
              li.nav-item
                a.nav-link(href='/raw-data') Raw Data
              li.nav-item
                a.nav-link(href='/filtered-data') Filtered Data
      .row
        .col
          .d-flex.justify-content-start
            p.ms-3.mt-2 Filter neccessary keys from JSON response and refactor as table
      .row
        .col
          .container-fluid
            p.mb-4.coloured iot devices info
            table#deviceTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th iot_mac
                  th sts
                  th timestamp
              tbody
      .row
        .col
          .container-fluid
            p.mb-4.mt-4.coloured general machines info
            table#generalMachineTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th iot_mac
                  th timestamp
              tbody
      .row
        .col
          .container-fluid
            p.mb-4.mt-4.coloured general machines daily data
            table#generalMachineDailyTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th iot_mac
                  th type
                  th data
                  th uid
                  th current_output_count
                  th current_defect_count
                  th timestamp
              tbody
      .row
        .col
          .container-fluid
            p.mb-4.mt-4.coloured computer sewing machines info
            table#comSewMachineTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th iot_mac
                  th timestamp
              tbody
      .row
        .col
          .container-fluid
            p.mb-4.mt-4.coloured computer sewing machines daily data
            table#comSewMachineDailyTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th iot_mac
                  th type
                  th data
                  th current_output_count
                  th current_defect_count
                  th timestamp
              tbody
      .row
        .col
          .container-fluid
            p.mb-4.mt-4.coloured workers info
            table#workerTable.display.mb-4.border.border-2.border-info(style='width:100%')
              thead
                tr
                  th
                  th uid
              tbody
    script(src='https://code.jquery.com/jquery-3.6.3.min.js', integrity='sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=', crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js', integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN', crossorigin='anonymous')
    script(src='https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js')
